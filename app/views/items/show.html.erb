<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Item</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to items_path, class: button_class(theme: "transparent") do %>
      All Items
      <% end %>
      <%= link_to edit_item_path(@item), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Item name:</p>
        <p><%= @item.item_name %></p>
      </li>
      <li>
        <p class="font-semibold">Price vnd:</p>
        <p><%= @item.price_vnd %></p>
      </li>
      <li>
        <p class="font-semibold">Type:</p>
        <p><%= @item.type.name %></p>
      </li>
  </ul>
</div>

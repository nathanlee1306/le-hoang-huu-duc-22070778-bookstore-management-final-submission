<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Book</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to books_path, class: button_class(theme: "transparent") do %>
      All Books
      <% end %>
      <%= link_to edit_book_path(@book), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Title:</p>
        <p><%= @book.title %></p>
      </li>
      <li>
        <p class="font-semibold">Author:</p>
        <p><%= @book.author %></p>
      </li>
      <li>
        <p class="font-semibold">Publisher:</p>
        <p><%= @book.publisher %></p>
      </li>
      <li>
        <p class="font-semibold">Year:</p>
        <p><%= @book.year %></p>
      </li>
      <li>
        <p class="font-semibold">Pirce vnd:</p>
        <p><%= @book.pirce_vnd %></p>
      </li>
      <li>
        <p class="font-semibold">In stock:</p>
        <p><%= @book.in_stock %></p>
      </li>
      <li>
        <p class="font-semibold">Genre:</p>
        <p><%= @book.genre.name %></p>
      </li>
  </ul>
</div>
